<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/ivThumbnailsGrid"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/first_thumbnail"
            tools:srcCompat="@drawable/fourth_thumbnail" />

        <TextView
            android:id="@+id/tvNameGrid"
            android:layout_width="204dp"
            android:layout_height="55dp"
            android:layout_gravity="center|bottom"

            android:background="#90000000"
            android:text="TextView"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/starImgGrid"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="bottom|end"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/star_border"
            tools:srcCompat="@drawable/star_border"

            />

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>